@{
    Layout = null;
}
@model MahjongAccount.Models.User

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>创建用户 - 麻将记账</title>
    <link href="~/css/weui.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        .page-title {
            text-align: center;
            padding: 20px 0;
            font-size: 20px;
            font-weight: bold;
        }

        .form-container {
            padding: 15px;
        }

        .avatar-preview {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin: 0 auto 20px;
            overflow: hidden;
            background-color: #eee;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #eee;
        }

        .avatar-required .avatar-preview {
            border-color: #E64340; /* 未上传时显示红色边框提示 */
        }

        .avatar-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .btn-area {
            margin-top: 30px;
        }

        .validation-message {
            color: #E64340;
            font-size: 14px;
            margin-top: 5px;
            padding-left: 15px;
            text-align: center;
        }

        .weui-btn_default {
            background-color: #EAEBEC;
            color: #06ae56;
        }

            .weui-btn_default:active {
                background-color: #e6e6e6;
            }

        .avatar-hint {
            text-align: center;
            color: #666;
            font-size: 14px;
            margin-bottom: 20px;
        }

        .visually-hidden {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            border: 0;
        }
    </style>
</head>
<body>
    <div class="page-title">创建新用户</div>

    <div class="form-container">
        <form asp-action="Create" enctype="multipart/form-data" onsubmit="return validateForm()">
            <div class="avatar-hint">请上传头像（必填）</div>

            <div class="avatar-preview-container @(ViewData.ModelState.ContainsKey("Avatar") ? "avatar-required" : "")">
                <div class="avatar-preview">
                    <img id="preview" src="" alt="预览头像" style="display: none;">
                    <i class="fa fa-user" style="font-size: 40px; color: #999;"></i>
                </div>

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("Avatar"))
                {
                    <div class="validation-message">
                        @ViewData.ModelState["Avatar"].Errors.First().ErrorMessage
                    </div>
                }
            </div>

            <div class="weui-cell weui-cell_access weui-cell_select">
                <div class="weui-cell__bd">选择头像</div>
                <div class="weui-cell__ft">
                    <input type="file" id="avatar" name="avatar" accept="image/*"
                           class="visually-hidden" required>
                    <label for="avatar" class="weui-uploader__input-box">
                        <i class="fa fa-upload"></i>
                    </label>
                </div>
            </div>

            <div class="weui-cells weui-cells_form">
                <div class="weui-cell">
                    <div class="weui-cell__hd"><label class="weui-label">昵称</label></div>
                    <div class="weui-cell__bd">
                        <input class="weui-input" type="text" name="nickname" placeholder="请输入昵称" required>
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("Nickname"))
                        {
                            <div class="validation-message">
                                @ViewData.ModelState["Nickname"].Errors.First().ErrorMessage
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="btn-area">
                <button type="submit" class="weui-btn weui-btn_primary">创建用户</button>
                <a asp-action="UserSelect" class="weui-btn weui-btn_default" style="margin-top: 10px;">返回</a>
            </div>
        </form>
    </div>

    <script>
        // 头像预览功能
        document.getElementById('avatar').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                // 移除必填提示样式
                document.querySelector('.avatar-preview-container').classList.remove('avatar-required');

                const reader = new FileReader();
                reader.onload = function (event) {
                    const preview = document.getElementById('preview');
                    preview.src = event.target.result;
                    preview.style.display = 'block';
                    preview.parentNode.querySelector('i').style.display = 'none';
                }
                reader.readAsDataURL(file);
            }
        });

        // 表单验证
        function validateForm() {
            const avatarInput = document.getElementById('avatar');
            const avatarContainer = document.querySelector('.avatar-preview-container');

            // 检查是否选择了头像文件
            if (!avatarInput.files || avatarInput.files.length === 0) {
                // 添加必填提示样式
                avatarContainer.classList.add('avatar-required');

                // 显示错误消息
                let errorElement = avatarContainer.querySelector('.validation-message');
                if (!errorElement) {
                    errorElement = document.createElement('div');
                    errorElement.className = 'validation-message';
                    avatarContainer.appendChild(errorElement);
                }
                errorElement.textContent = '请上传头像';

                // 手动聚焦到标签元素，提供更好的用户体验
                document.querySelector('label[for="avatar"]').focus();
                return false; // 阻止表单提交
            }

            return true; // 允许表单提交
        }
    </script>
</body>
</html>
