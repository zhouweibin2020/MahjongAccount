@{
    Layout = null;
}
@model MahjongAccount.Models.User

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@(Model.Id == 0 ? "创建用户" : "编辑用户") - 麻将记账</title>
    <link href="~/lib/weui.min.css" rel="stylesheet" />
    <link href="~/css/jquery-weui.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-2.1.4.js"></script>
    <script src="~/js/jquery-weui.js"></script>
    <style>
        .page-title {
            text-align: center;
            padding: 20px 0;
            font-size: 20px;
            font-weight: bold;
            background-color: #fff;
            border-bottom: 1px solid #eee;
            margin-bottom: 15px;
        }

        .form-container {
            padding: 15px;
            background-color: #f5f5f5;
        }

        .form-wrapper {
            background-color: #fff;
            border-radius: 8px;
            padding: 15px;
        }

        .avatar-preview {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin: 0 auto 20px;
            overflow: hidden;
            background-color: #eee;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #eee;
            position: relative;
        }

            .avatar-preview img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                position: absolute;
                top: 0;
                left: 0;
            }

        .avatar-required .avatar-preview {
            border-color: #E64340;
        }

        .btn-area {
            margin-top: 30px;
            padding: 0 15px;
        }

        .validation-message {
            color: #E64340;
            font-size: 14px;
            margin-top: 5px;
            padding-left: 15px;
            text-align: center;
        }

        .weui-btn_default {
            background-color: #EAEBEC;
            color: #06ae56;
        }

            .weui-btn_default:active {
                background-color: #e6e6e6;
            }

        .avatar-hint {
            text-align: center;
            color: #666;
            font-size: 14px;
            margin-bottom: 20px;
        }

        .visually-hidden {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            border: 0;
        }

        .weui-cells {
            margin-top: 0;
        }

        .current-avatar-hint {
            text-align: center;
            color: #666;
            font-size: 13px;
            margin: -15px 0 20px;
        }
    </style>
</head>
<body>
    <div class="page-title">@(Model.Id == 0 ? "创建新用户" : "编辑用户")</div>

    <div class="form-container">
        <div class="form-wrapper">
            <form asp-action="CreateOrUpdate" enctype="multipart/form-data" onsubmit="return validateForm()">
                @if (Model.Id != 0)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="avatar-hint">@(Model.Id == 0 ? "请上传头像（必填）" : "上传新头像（可选）")</div>

                <div class="avatar-preview-container @(ViewData.ModelState.ContainsKey("Avatar") ? "avatar-required" : "")">
                    <div class="avatar-preview">
                        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                        {
                            <img id="preview" src="@Model.AvatarUrl"
                                 alt="当前头像" style="display: block;">
                            <i class="fa fa-user" style="font-size: 40px; color: #999; display: none;"></i>
                            <div class="current-avatar-hint">点击上传可更换头像</div>
                        }
                        else
                        {
                            <img id="preview" src="" alt="预览头像" style="display: none;">
                            <i class="fa fa-user" style="font-size: 40px; color: #999;"></i>
                        }
                    </div>

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("Avatar"))
                    {
                        <div class="validation-message">
                            @ViewData.ModelState["Avatar"].Errors.First().ErrorMessage
                        </div>
                    }
                </div>

                <div class="weui-cell weui-cell_access weui-cell_select">
                    <div class="weui-cell__bd">@(Model.Id == 0 ? "选择头像" : "更换头像")</div>
                    <div class="weui-cell__ft">
                        <input type="file" id="avatar" name="avatar" accept="image/*"
                               class="visually-hidden" @(Model.Id == 0 ? "required" : "")>
                        <label for="avatar" class="weui-uploader__input-box">
                            <i class="fa fa-upload"></i>
                        </label>
                    </div>
                </div>

                <div class="weui-cells weui-cells_form">
                    <div class="weui-cell">
                        <div class="weui-cell__hd"><label class="weui-label">昵称</label></div>
                        <div class="weui-cell__bd">
                            <input class="weui-input" type="text" name="nickname"
                                   placeholder="请输入昵称" required
                                   value="@Model.Nickname">
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("Nickname"))
                            {
                                <div class="validation-message">
                                    @ViewData.ModelState["Nickname"].Errors.First().ErrorMessage
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="btn-area">
                    <button type="submit" class="weui-btn weui-btn_primary">
                        @(Model.Id == 0 ? "创建用户" : "保存修改")
                    </button>
                    <button type="button" class="weui-btn weui-btn_default" style="margin-top: 10px;" onclick="window.history.back();">
                        返回
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // 头像预览功能
        $('#avatar').on('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                // 移除必填提示样式
                $('.avatar-preview-container').removeClass('avatar-required');

                const reader = new FileReader();
                reader.onload = function (event) {
                    const preview = $('#preview');
                    preview.attr('src', event.target.result)
                           .show()
                           .parent().find('i').hide();
                    // 隐藏当前头像提示
                    $('.current-avatar-hint').hide();
                }
                reader.readAsDataURL(file);
            }
        });

        // 表单验证
        function validateForm() {
            // 创建新用户时才验证头像
            if (@Model.Id == 0) {
                const avatarInput = $('#avatar')[0];
                const avatarContainer = $('.avatar-preview-container');

                // 检查是否选择了头像文件
                if (!avatarInput.files || avatarInput.files.length === 0) {
                    // 添加必填提示样式
                    avatarContainer.addClass('avatar-required');

                    // 显示错误消息
                    let errorElement = avatarContainer.find('.validation-message');
                    if (errorElement.length === 0) {
                        errorElement = $('<div class="validation-message"></div>');
                        avatarContainer.append(errorElement);
                    }
                    errorElement.text('请上传头像');

                    $.toast('请上传头像', 'forbidden');

                    // 手动聚焦到标签元素
                    $('label[for="avatar"]').focus();
                    return false; // 阻止表单提交
                }
            }

            // 检查昵称是否为空
            const nickname = $('input[name="nickname"]').val().trim();
            if (!nickname) {
                $.toast('请输入昵称', 'forbidden');
                $('input[name="nickname"]').focus();
                return false;
            }

            return true; // 允许表单提交
        }
    </script>
</body>
</html>