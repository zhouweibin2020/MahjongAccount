@model MahjongAccount.Models.ViewModels.ResultViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>牌局结果 - 麻将记账</title>
    <link href="~/lib/weui.min.css" rel="stylesheet" />
    <link href="~/css/jquery-weui.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-2.1.4.js"></script>
    <script src="~/js/jquery-weui.js"></script>
    <style>
        .page-title {
            text-align: center;
            padding: 15px 0;
            font-size: 18px;
            font-weight: bold;
            border-bottom: 1px solid #eee;
            background-color: #fff;
            position: relative;
        }

        .result-summary {
            padding: 20px 15px;
            text-align: center;
            background-color: #f5f5f5;
            margin-bottom: 15px;
        }

        .result-amount {
            font-size: 36px;
            font-weight: bold;
            margin: 10px 0;
        }

        .win {
            color: #E64340;
        }

        .lose {
            color: #1AAD19;
        }

        .tie {
            color: #333;
        }

        .section-title {
            padding: 10px 15px;
            font-size: 16px;
            font-weight: 500;
            border-bottom: 1px solid #eee;
            background-color: #f9f9f9;
        }

        .player-result-item {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border-bottom: 1px solid #eee;
            background-color: #fff;
            transition: background-color 0.2s;
        }

            .player-result-item:active {
                background-color: #f5f5f5;
            }

        .player-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
            object-fit: cover;
        }

        .player-info {
            flex: 1;
        }

        .player-name {
            font-size: 16px;
            margin-bottom: 3px;
        }

        .player-stats {
            font-size: 14px;
            color: #666;
        }

        .player-amount {
            font-size: 18px;
            font-weight: bold;
            margin-right: 15px;
            white-space: nowrap;
        }

        .settlement-item {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border-bottom: 1px solid #eee;
            background-color: #fff;
            transition: background-color 0.2s;
        }

            .settlement-item:active {
                background-color: #f5f5f5;
            }

        .settlement-arrow {
            margin: 0 10px;
            color: #999;
        }

        .settlement-item:last-child,
        .player-result-item:last-child {
            margin-bottom: 20px;
        }

        .btn-area {
            position: fixed;
            bottom: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 90%;
            display: flex;
            padding: 15px;
            z-index: 10;
        }

        .content-container {
            box-sizing: border-box;
            min-height: 100vh;
            background-color: #f5f5f5;
            padding-bottom: 160px;
        }

        .weui-btn {
            margin: 0 !important;
        }

        .game-info {
            padding: 10px 15px;
            font-size: 14px;
            color: #666;
            background-color: #f9f9f9;
            border-bottom: 1px solid #eee;
        }

        .current-user {
            background-color: #C8DCFA;
        }

        /* 列表容器样式 */
        .list-container {
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            margin: 0 15px 15px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        }

            .list-container .section-title {
                border-radius: 8px 8px 0 0;
                margin: 0;
            }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #888;
        }

        .empty-icon {
            font-size: 48px;
            margin-bottom: 15px;
        }

        /* 统计按钮样式 */
        .stats-btn {
            background-color: #2D8CF0;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 5px 10px;
            font-size: 14px;
            cursor: pointer;
            white-space: nowrap;
        }

            .stats-btn:active {
                background-color: #1C74D4;
            }

        .weui-tabbar {
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .weui-btn {
            width: 100%;
        }

        .back-btn {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #333;
            font-size: 20px;
        }
    </style>
</head>
<body>
    @if (Model.Game != null)
    {
        <div class="page-title">
            <a href="javascript:history.back()" class="back-btn">
                <i class="fa fa-arrow-left"></i>
            </a>
            牌局结果 #@Model.Game.Id
        </div>

        <!-- 添加内容容器，解决底部遮挡问题 -->
        <div class="content-container">
            <div class="game-info">
                开始时间: @Model.Game.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")<br>
                结束时间: @Model.Game.EndedAt?.ToString("yyyy-MM-dd HH:mm:ss")
            </div>

            @if (Model.CurrentUserResult != null)
            {
                <div class="result-summary">
                    <div>你的最终结果</div>
                    <div class="result-amount @(Model.CurrentUserResult.NetResult > 0 ? "win" : Model.CurrentUserResult.NetResult < 0 ? "lose" : "tie")">
                        @(Model.CurrentUserResult.NetResult > 0 ? "+" : "-")¥@Math.Abs(Model.CurrentUserResult.NetResult)
                    </div>
                    <div>
                        赢: ¥@Model.CurrentUserResult.TotalWin |
                        输: ¥@Model.CurrentUserResult.TotalLose
                    </div>
                </div>
            }

            <!-- 玩家结果列表容器 -->
            <div class="list-container">
                <div class="section-title">所有玩家结果</div>
                @foreach (var result in Model.Results)
                {
                    <div class="player-result-item @(result.UserId == Model.CurrentUserResult?.UserId ? "current-user" : "")">
                        <img src="@(!string.IsNullOrEmpty(result.AvatarUrl) ? result.AvatarUrl :
                                  $"https://picsum.photos/50/50?random={result.UserId}")"
                             alt="@result.Nickname 的头像" class="player-avatar">

                        <div class="player-info">
                            <div class="player-name">@result.Nickname</div>
                            <div class="player-stats">
                                赢: ¥@result.TotalWin | 输: ¥@result.TotalLose
                            </div>
                        </div>

                        <div class="player-amount @(result.NetResult > 0 ? "win" : result.NetResult < 0 ? "lose" : "tie")">
                            @(result.NetResult > 0 ? "+" : "-")¥@Math.Abs(result.NetResult)
                        </div>

                        <!-- 新增统计按钮 -->
                        <a href="@Url.Action("Statistics", "Game", new { gameId = Model.Game.Id, userId = result.UserId })" class="stats-btn">
                            <i class="fa fa-bar-chart"></i> 统计
                        </a>
                    </div>
                }
            </div>

            <!-- 结算记录列表容器 -->
            <div class="list-container">
                <div class="section-title">结算转账记录</div>
                @if (Model.Settlements.Any())
                {
                    foreach (var st in Model.Settlements)
                    {
                        <div class="settlement-item @(st.ToUserId == Model.CurrentUserResult?.UserId || st.FromUserId == Model.CurrentUserResult?.UserId ? "current-user" : "")">
                            <div style="display: flex; align-items: center;">
                                <img src="@(!string.IsNullOrEmpty(st.FromAvatarUrl) ? st.FromAvatarUrl :
                                      $"https://picsum.photos/40/40?random={st.FromUserId}")"
                                     alt="@st.FromNickname 的头像" style="width: 40px; height: 40px; border-radius: 50%;">
                                <span style="margin-left: 5px;">@st.FromNickname</span>
                            </div>

                            <div class="settlement-arrow">
                                <i class="fa fa-arrow-right"></i>
                            </div>

                            <div style="display: flex; align-items: center;">
                                <img src="@(!string.IsNullOrEmpty(st.ToAvatarUrl) ? st.ToAvatarUrl :
                                      $"https://picsum.photos/40/40?random={st.ToUserId}")"
                                     alt="@st.ToNickname 的头像" style="width: 40px; height: 40px; border-radius: 50%;">
                                <span style="margin-left: 5px;">@st.ToNickname</span>
                            </div>

                            <div style="font-weight: bold; color: #E64340; margin-left: auto;">
                                ¥@st.Amount
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <i class="fa fa-exchange empty-icon"></i>
                        <p>无需转账结算</p>
                    </div>
                }
            </div>
        </div> <!-- 内容容器结束 -->

        <div class="btn-area">
            <a asp-action="Room" asp-route-gameId="@Model.Game.Id" asp-route-view_flow="true" class="weui-btn weui-btn_primary">
                查看详细流水
            </a>
        </div>

        <div class="weui-tabbar">
            <a href="@Url.Action("Index", "Home", new { autoGoGame = false })" class="weui-tabbar__item">
                <i class="weui-tabbar__icon fa fa-home"></i>
                <p class="weui-tabbar__label">首页</p>
            </a>
            <a href="@Url.Action("History", "Home")" class="weui-tabbar__item">
                <i class="weui-tabbar__icon fa fa-history"></i>
                <p class="weui-tabbar__label">历史</p>
            </a>
            <a href="#" class="weui-tabbar__item weui-bar__item_on">
                <i class="weui-tabbar__icon fa fa-gamepad"></i>
                <p class="weui-tabbar__label">牌局</p>
            </a>
        </div>
    }
    else
    {
        <div class="page-title">牌局信息不存在</div>
        <div style="text-align: center; padding: 30px; padding-bottom: 120px;">
            <!-- 同样添加底部内边距 -->
            <div class="empty-state">
                <i class="fa fa-exclamation-circle empty-icon"></i>
                <p>无法找到指定的牌局结果</p>
                <a asp-action="Index" asp-controller="Home" asp-route-autoGoGame="false" class="weui-btn weui-btn_primary" style="margin-top: 20px;">
                    返回首页
                </a>
            </div>
        </div>
    }
</body>
</html>