@{
    Layout = null;
}
@model List< MahjongAccount.Models.ViewModels.HistoryItemViewModel>
@{
    var currentUser = ViewData["CurrentUser"] as MahjongAccount.Models.User;
    var totalGames = (int)ViewData["TotalGames"];
    var totalNetResult = (int)ViewData["TotalNetResult"];
    var totalWin = (int)ViewData["TotalWin"];
    var totalLose = (int)ViewData["TotalLose"];
    var startDate = ViewData["StartDate"] as string;
    var endDate = ViewData["EndDate"] as string;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>历史记录 - 麻将记账</title>
    <link href="~/lib/weui.min.css" rel="stylesheet" />
    <link href="~/css/jquery-weui.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-2.1.4.js"></script>
    <script src="~/js/jquery-weui.js"></script>
    <style>
        .page-title {
            text-align: center;
            padding: 20px 0;
            font-size: 20px;
            font-weight: bold;
            border-bottom: 1px solid #eee;
            background-color: #fff;
        }

        .filter-bar {
            padding: 10px 15px;
            background-color: #f5f5f5;
            border-bottom: 1px solid #eee;
        }

        .filter-form {
            display: flex;
            gap: 10px;
        }

        .date-input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }

        .filter-btn {
            padding: 8px 15px;
            background-color: #07c160;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .reset-btn {
            padding: 8px 15px;
            background-color: #f5f5f5;
            color: #333;
            border: 1px solid #ddd;
            border-radius: 4px;
            cursor: pointer;
        }

        .summary-card {
            display: flex;
            padding: 15px;
            background-color: #fff;
            border-bottom: 1px solid #eee;
        }

        .summary-item {
            flex: 1;
            text-align: center;
        }

        .summary-label {
            font-size: 14px;
            color: #666;
            margin-bottom: 5px;
        }

        .summary-value {
            font-size: 18px;
            font-weight: bold;
        }

        .positive {
            color: #E64340;
        }

        .negative {
            color: #1AAD19;
        }

        .history-list {
            padding-bottom: 60px;
            background-color: #f5f5f5;
        }

        .history-item {
            padding: 15px;
            border-bottom: 1px solid #eee;
            background-color: #fff;
            display: flex;
            flex-direction: column;
            transition: background-color 0.2s;
        }

            .history-item:active {
                background-color: #f5f5f5;
            }

        .history-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .game-info {
            font-size: 14px;
            color: #666;
        }

        .game-date {
            font-size: 14px;
            color: #999;
        }

        .history-stats {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .result-amount {
            font-size: 18px;
            font-weight: bold;
        }

        .detail-btn {
            color: #07c160;
            font-size: 14px;
            text-decoration: none;
            margin-top: 10px;
            align-self: flex-end;
            display: inline-flex;
            align-items: center;
        }

            .detail-btn i {
                margin-left: 3px;
                transition: transform 0.2s;
            }

            .detail-btn:active i {
                transform: translateX(2px);
            }

        .empty-state {
            text-align: center;
            padding: 50px 15px;
            color: #999;
            background-color: #f5f5f5;
            min-height: calc(100vh - 220px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .empty-icon {
            font-size: 50px;
            margin-bottom: 15px;
            color: #ddd;
        }

        .weui-tabbar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 100;
        }

        .status-tag {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
            margin-left: 5px;
        }

        .status-ongoing {
            background-color: #fff8e6;
            color: #ff9800;
        }

        .status-ended {
            background-color: #e8f5e9;
            color: #1AAD19;
        }
    </style>
</head>
<body>
    <div class="page-title">历史记录</div>

    <div class="filter-bar">
        <form class="filter-form" asp-action="History" method="get" id="filterForm">
            <input type="date" name="startDate" class="date-input" value="@startDate" placeholder="开始日期">
            <input type="date" name="endDate" class="date-input" value="@endDate" placeholder="结束日期">
            <button type="submit" class="filter-btn">筛选</button>
            <a href="@Url.Action("History")" class="reset-btn">重置</a>
        </form>
    </div>

    <div class="summary-card">
        <div class="summary-item">
            <div class="summary-label">总局数</div>
            <div class="summary-value">@totalGames</div>
        </div>
        <div class="summary-item">
            <div class="summary-label">总计</div>
            <div class="summary-value @(totalNetResult > 0 ? "positive" : totalNetResult < 0 ? "negative" : "")">
                @(totalNetResult > 0 ? "+" : "")¥@Math.Abs(totalNetResult)
            </div>
        </div>
        <div class="summary-item">
            <div class="summary-label">胜率</div>
            <div class="summary-value">
                @(totalGames > 0 ? $"{(int)(totalWin * 100 / totalGames)}%" : "0%")
            </div>
        </div>
    </div>

    <div class="history-list">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="history-item">
                    <div class="history-header">
                        <div>
                            牌局 #@item.GameId
                            <span class="status-tag @(item.Status == "ongoing" ? "status-ongoing" : "status-ended")">
                                @(item.Status == "ongoing" ? "进行中" : "已结束")
                            </span>
                        </div>
                        <div class="game-date">
                            @item.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                        </div>
                    </div>
                    <div class="history-stats">
                        <div>
                            赢: ¥@item.UserTotalWin | 输: ¥@item.UserTotalLose
                        </div>
                        <div class="result-amount @(item.UserNetResult > 0 ? "positive" : item.UserNetResult < 0 ? "negative" : "")">
                            @(item.UserNetResult > 0 ? "+" : "")¥@Math.Abs(item.UserNetResult)
                        </div>
                    </div>
                    <a asp-action="Result" asp-controller="Game" asp-route-gameId="@item.GameId" class="detail-btn" id="detailBtn_@item.GameId">
                        查看详情 <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fa fa-history"></i>
                </div>
                <div>暂无牌局记录</div>
                <div style="margin-top: 10px; font-size: 14px;">
                    开始你的第一局麻将吧
                </div>
                <a asp-action="Create" asp-controller="Game" class="weui-btn weui-btn_primary" style="margin-top: 20px; width: 120px;" id="createGameBtn">
                    创建牌局
                </a>
            </div>
        }
    </div>

    <div class="weui-tabbar">
        <a href="@Url.Action("Index", "Home")" class="weui-tabbar__item">
            <i class="weui-tabbar__icon fa fa-home"></i>
            <p class="weui-tabbar__label">首页</p>
        </a>
        <a href="#" class="weui-tabbar__item weui-bar__item_on">
            <i class="weui-tabbar__icon fa fa-history"></i>
            <p class="weui-tabbar__label">历史</p>
        </a>
        <a href="@Url.Action("Rankings", "Home")" class="weui-tabbar__item">
            <i class="weui-tabbar__icon fa fa-trophy"></i>
            <p class="weui-tabbar__label">榜单</p>
        </a>
    </div>
    <script>
        // 页面加载完成后初始化
        $(document).ready(function() {
            // 筛选表单提交处理
            $('#filterForm').on('submit', function(e) {
                const startDate = $('input[name="startDate"]').val();
                const endDate = $('input[name="endDate"]').val();

                // 简单验证日期
                if (startDate && endDate && startDate > endDate) {
                    e.preventDefault();
                    $.toast('开始日期不能晚于结束日期', 'forbidden');
                    return false;
                }

                // 显示加载状态
                const $submitBtn = $(this).find('button[type="submit"]');
                $submitBtn.addClass('weui-btn_loading').prop('disabled', true);
            });
        });
    </script>
</body>
</html>
