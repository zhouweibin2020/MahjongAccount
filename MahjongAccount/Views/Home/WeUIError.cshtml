@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <title>@ViewBag.Title</title>
    <link href="~/lib/weui.min.css" rel="stylesheet" />
    <link href="~/css/jquery-weui.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        .error-container {
            padding-top: 30px;
        }

        .error-icon {
            font-size: 72px;
            color: #e53935;
            margin-bottom: 20px;
        }

        .error-details {
            background-color: #f5f5f5;
            border-radius: 5px;
            padding: 15px;
            text-align: left;
            font-size: 14px;
            margin-top: 20px;
            display: none;
        }

        .show-details {
            color: #1976d2;
            font-size: 14px;
            margin-top: 10px;
            display: inline-block;
            cursor: pointer;
        }

        .weui-msg__desc {
            white-space: pre-wrap;
            word-wrap: break-word;
            text-align: center; 
        }
    </style>
</head>
<body ontouchstart>
    <div class="weui-msg error-container">
        <div class="weui-msg__icon-area">
            <i class="fa fa-exclamation-circle error-icon"></i>
        </div>
        <div class="weui-msg__text-area">
            <h2 class="weui-msg__title">@ViewBag.Title</h2>
            @if (!string.IsNullOrEmpty(@ViewBag.ErrorMessage))
            {
                <p class="weui-msg__desc">@ViewBag.ErrorMessage</p>
            }
        </div>
        <div class="weui-msg__opr-area">
            <p class="weui-btn-area">
                <a href="@Url.Action("Index", "Home", new { autoGoGame = false })" class="weui-btn weui-btn_primary">
                    <i class="fa fa-home mr-1"></i> 返回首页
                </a>
                <a href="javascript:history.back()" class="weui-btn weui-btn_default">
                    <i class="fa fa-arrow-left mr-1"></i> 返回上一页
                </a>
            </p>
        </div>
        <div class="weui-msg__extra-area">
            <div class="weui-footer">
                <p class="weui-footer__text">© @DateTime.Now.Year 麻将记账系统</p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery-2.1.4.js"></script>
    <script src="~/js/jquery-weui.js"></script>
</body>
</html>