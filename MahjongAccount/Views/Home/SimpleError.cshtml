@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>出错了 - 麻将记账</title>
    <link href="~/lib/weui.min.css" rel="stylesheet" />
    <link href="~/css/jquery-weui.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-2.1.4.js"></script>
    <script src="~/js/jquery-weui.js"></script>

    <style>
        body {
            background-color: #f5f5f5;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .error-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 30px 15px;
            text-align: center;
        }

        .error-icon {
            font-size: 80px;
            color: #FF4D4F;
            margin-bottom: 20px;
        }

        .error-title {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .error-message {
            font-size: 16px;
            color: #666;
            max-width: 80%;
            margin-bottom: 30px;
            line-height: 1.5;
        }

        .btn-area {
            display: flex;
            flex-direction: column;
            gap: 10px;
            width: 60%;
            max-width: 300px;
        }

        .weui-btn {
            font-size: 20px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-icon">
            <i class="fa fa-exclamation-triangle"></i>
        </div>

        @if (ViewData["title"] != null && !string.IsNullOrEmpty(ViewData["title"]?.ToString()))
        {
            <div class="error-title">
                @ViewData["title"]
            </div>
        }

        <div class="error-message">
            <span>@ViewData["message"]</span>
        </div>

        <div class="btn-area">
            <button class="weui-btn weui-btn_primary" onclick="history.back()">
                <i class="fa fa-arrow-left mr-2"></i>返回
            </button>
        </div>
    </div>
</body>
</html>
